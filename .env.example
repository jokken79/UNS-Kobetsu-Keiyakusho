# ========================================
# DATABASE CONFIGURATION
# ⚠️  WARNING: CHANGE THESE IN PRODUCTION!
# ========================================
POSTGRES_DB=kobetsu_db
POSTGRES_USER=kobetsu_admin
# ⚠️  CRITICAL: Use a strong password in production (min 16 chars)
POSTGRES_PASSWORD=CHANGE_THIS_IN_PRODUCTION
POSTGRES_PORT=5432

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# ========================================
# JWT AUTHENTICATION
# ⚠️  CRITICAL: Generate secure SECRET_KEY for production!
# ========================================
# Generate with: openssl rand -hex 32
# ⚠️  DO NOT USE THIS DEFAULT VALUE IN PRODUCTION!
SECRET_KEY=INSECURE_DEV_KEY_DO_NOT_USE_IN_PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ========================================
# BACKEND CONFIGURATION
# ========================================
BACKEND_PORT=8000
# ⚠️  Set DEBUG=false in production!
DEBUG=false
ENVIRONMENT=development

# Database URL (constructed from above)
# ⚠️  Update password to match POSTGRES_PASSWORD
DATABASE_URL=postgresql://kobetsu_admin:CHANGE_THIS_IN_PRODUCTION@db:5432/kobetsu_db

# ========================================
# FRONTEND CONFIGURATION
# ========================================
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NODE_ENV=development

# ========================================
# ADMINER (Database UI)
# ========================================
ADMINER_PORT=8080

# ========================================
# CORS CONFIGURATION
# ========================================
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ========================================
# FILE UPLOADS
# ========================================
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs

